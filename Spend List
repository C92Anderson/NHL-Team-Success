libname use "F:\Competition\PBoberg17658.00-hockey2\Analysis\Background Research\CWA\use";

%macro yr(yr);
data &yr. ;
	set use.tempspendinga98_11;
	spend=&yr.;
	run;

%macro tm(tm);
	data &yr.;
		set &yr.;
		if team="&tm." then team1="&tm._&yr.";
		run;
%mend tm;
%tm(ANA);
