%tm(WSH);


%mend yr;
%yr(Salary_98);
%yr(Salary_99);
%yr(Salary_00);
%yr(Salary_01);
%yr(Salary_02);
%yr(Salary_03);
%yr(Salary_04);
%yr(Salary_06);
%yr(Salary_07);
%yr(Salary_08);
%yr(Salary_09);
%yr(Salary_10);
%yr(Salary_11);

data use.spendlist (keep= spend team1 year dummyspend dummy);
	set Salary_98 Salary_99 Salary_00 Salary_01 Salary_02 Salary_03 Salary_04 salary_06 salary_07 salary_08 salary_09 salary_10 salary_11;
	year=substr(team1,anydigit(team1),2);
	if 5< year<13 then dummy=1;
	else dummy=0;
	dummyspend=dummy*spend;
	run;
